<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/layout-styles.css" asp-append-version="true" />
	@* connection iccons *@
	<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	@* font connection *@
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
		  rel="stylesheet" />
</head>
<body>
	<header>
		<div class="upper-header">
			<a asp-controller="Home" asp-action="Index">
				<img class="logo" src="~/images/logo.png" alt="Image" />
			</a>

			<form class="search-form" method="get" asp-controller="Vehicles">
				<input type="text"
					   class="search-line"
					   placeholder="Search on Megawheels" />
				<input class="search-button" type="submit" value="FIND" />
			</form>
			<div class="additional">
				@if (User.Identity.IsAuthenticated)
				{
					<a class="image-button" asp-controller="User" asp-action="Login">
						<box-icon name='user'></box-icon>
						<span>Profile</span>
					</a>

					<a class="image-button" asp-controller="Support" asp-action="Index">
						<box-icon name="support"></box-icon>
						<span>Support</span>
					</a>

					<a class="image-button" id="settings-button">
						<box-icon name="cog"></box-icon>
						<span>Settings</span>
					</a>

					<a class="image-button" asp-controller="User" asp-action="Logout">
						<box-icon name='exit'></box-icon>
						<span>Logout</span>
					</a>
				}
				else
				{
					<a class="image-button" asp-controller="User" asp-action="Login">
						<box-icon name="log-in-circle"></box-icon>
						<span>Sign in</span>
					</a>

					<a class="image-button" id="settings-button">
						<box-icon name="cog"></box-icon>
						<span>Settings</span>
					</a>
				}
			</div>

		</div>
		<div class="bottom-header">
			<nav>
				<ul>
					<li><a asp-controller="Vehicles" asp-action="Index" asp-route-type="passenger">Passenger cars</a></li>
					<li><a href="@ViewBag.VehiclesURL?type=motorcycles">Motorcycles</a></li>
					<li><a href="@ViewBag.VehiclesURL?type=trucks">Trucks</a></li>
					<li><a href="@ViewBag.VehiclesURL?type=special">Special vehicles</a></li>
					<li><a href="@ViewBag.VehiclesURL?type=buses">Buses</a></li>
					<li><a href="@ViewBag.VehiclesURL?type=other">Other</a></li>
				</ul>
			</nav>
		</div>
	</header>

	<div class="main-container">
		<main role="main" class="pb-3">
			@RenderBody()
			@await Html.PartialAsync("~/Views/Shared/Partials/Settings.cshtml")
			
		</main>
	</div>

	<footer>
		<div class="footer-container">
			<div>
				<box-icon name="github" type="logo"></box-icon>
				<a href="https://github.com/MaXiMKnjsh">GitHub</a>
			</div>
			<div>
				<box-icon type="logo" name="telegram"></box-icon>
				<a href="https://t.me/maximknjsh">Telegram</a>
			</div>
			<div>
				<box-icon name="envelope" type="solid"></box-icon>
				<span>maks.knysh.00@mail.ru</span>
			</div>
		</div>
	</footer>
	@await RenderSectionAsync("Scripts", required: false)
	@* script connection *@
	<script src="~/js/layout.js"></script>
</body>
</html>

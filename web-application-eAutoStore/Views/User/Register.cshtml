@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mega Wheels | Register</title>
    <link rel="stylesheet" href="~/css/login-register-styles.css" type="text/css" asp-append-version="true" />
    @* connection iccons *@
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>
<body>
    <div class="wrapper">
        <form method="post" id="register-form" asp-controller="User" asp-action="ProcessRegisterForm">
            <h1>Register</h1>
            <div class="input-box">
                <input type="email"
                       name="email"
                       id="email"
                       placeholder="Email" />
                <box-icon class="icon" type='solid' name='envelope'></box-icon>
            </div>
            <div class="input-box">
                <input type="text"
                       name="name"
                       id="name"
                       placeholder="Username" required maxlength="20" />
                <box-icon class="icon" type="solid" name="user"></box-icon>
            </div>
            <div class="input-box">
                <input type="password"
                       name="password"
                       id="password"
                       placeholder="Password" required maxlength="20" minlength="8"/>
                <box-icon class="icon" type="solid" name="lock-alt"></box-icon>
            </div>
            <div class="input-box">
                <input type="password"
                       name="confirmPassword"
                       id="confirmPassword"
                       placeholder="Confirm password" required maxlength="20" minlength="8" />
                <box-icon class="icon" type="solid" name="lock-alt"></box-icon>
            </div>
            <div class="remember">
                <div>
                    <input type="checkbox" name="remember" id="remember" />
                    <label for="remember">Remember me</label>
                </div>
            </div>
            <input class="btn" type="submit" value="Sign up" />
            <div class="login-div">
                <span>Already have an account?</span>
                <a asp-controller="User" asp-action="Login" id="signin">Sign in</a>
            </div>
        </form>
    </div>
    <script src="~/js/register.js"></script>
</body>
</html>
